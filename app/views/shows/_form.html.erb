<%= form_for @show do |f| %>
  <h2>Enter show details</h2>

  <% @show.errors.full_messages.each do |msg| %>
    <div class="alert-message error">
      <p>
        <%= msg %>
      </p>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %>
    <div class="input">
      <%= f.text_field :name %>
    </div>
  </div>
  <div class="actions">
    <%= f.submit :class => "primary btn large" %>
  </div>
<% end %>
